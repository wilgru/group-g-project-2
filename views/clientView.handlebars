<div class="container">
  <div class="row">
    <div class="card mb-3 col-lg-4 col-sm-12 col-12" style="width: 18rem;">
      <div class="card-body">
        <h5 class="card-title">{{client.firstName}} {{client.lastName}}</h5>
        <small class="text-muted">ID: {{client.id}}</small> <small class="text-muted">Client since: 00/00/0000</small>
      </div>
      <ul class="list-group list-group-flush">
        <li class="list-group-item">Email: <a href="mailto:{{client.email}}">{{client.email}}</a></li>
        <li class="list-group-item">Phone: <a href="tel:{{client.phone}}">{{client.phone}}</a></li>
        <li class="list-group-item">
          Address:
          <div class="card bg-light">
            <div class="card-body">
              <small>123 Street Street</small><br>
              <small>Sydney 2000 NSW</small><br>
              <small>Australia</small>
            </div>
          </div>
        </li>
      </ul>
      <div class="card-body">
        <a href="#" class="card-link">Edit</a>
        <a href="#" class="card-link">Delete</a>
      </div>
    </div>

    <div class="col-lg-8 col-sm-12 col-12">
      <div class="list-group">
        {{#each client.projects as |project|}}
        {{> projectCard}}
        {{/each}}
        <a href="/project/add/" class="list-group-item list-group-item-action list-group-item-success">
          + Add new Project
        </a>
      </div>
    </div>
  </div>
</div>