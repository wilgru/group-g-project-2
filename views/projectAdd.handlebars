<h2>New Project Form</h2>

<form class="form-project-add">
	<div class="form-row">
		<div class="form-group col-md-12">
			<label for="formGroupExampleInput">Project Name</label>
			<input type="text" class="form-control" id="inputProjectName" placeholder="Project name here..." />
		</div>
	</div>
	<div class="form-row">
		<div class="form-group col-md-4">
			<label for="inputBudget">Project Budget</label>
			<input type="text" class="form-control" id="inputBudget" placeholder="$1,000,000" />
		</div>
		<div class="form-group col-md-4">
			<label for="inputBudget">Client</label>
			<select id="inputClient" class="form-control">
				<option selected>Choose...</option>
				{{#each client as |c|}}
					<option value="{{c.id}}">{{c.firstName}}</option>
				{{/each}}
			</select>
		</div>
		<div class="form-group col-md-4">
			<label for="inputBudget">Manager</label>
			<select id="inputManager" class="form-control">
				<option selected>Choose...</option>
				{{#each manager as |m|}}
					<option value="{{m.id}}">{{m.name}}</option>
				{{/each}}
			</select>
		</div>
	</div>
	<div class="form-row">
		<div class="form-group col-md-12">
			<label for="inputAddress">Address</label>
			<input type="text" class="form-control" id="inputAddress" placeholder="1234 Main St" />
		</div>
		<div class="form-group col-md-6">
			<label for="inputCity">City</label>
			<input type="text" class="form-control" id="inputCity" />
		</div>
		<div class="form-group col-md-4">
			<label for="inputState">State</label>
			<select id="inputState" class="form-control">
				<option selected>Choose...</option>
				<option>NSW</option>
				<option>WA</option>
				<option>ACT</option>
				<option>QLD</option>
				<option>SA</option>
				<option>TAS</option>
			</select>
		</div>
		<div class="form-group col-md-2">
			<label for="inputZip">Zip</label>
			<input type="text" class="form-control" id="inputZip" />
		</div>
	</div>
	<div class="form-row">
		<div class="form-group col-12">
			<label for="inputDescription">Project Details</label>
			<textarea type="text" class="form-control" id="inputDescription" placeholder="Project description here..."></textarea>
		</div>
	</div>
	<button type="submit" class="btn btn-primary">Add Project</button>
</form>

<script src="./../../js/projectAdd.js"></script>