<link rel="stylesheet" href="./../../css/style.css" />
<h1>New Project Form</h1>

<form class="form-project-add">
	<div class="form-row">
		<div class="form-group col-md-12">
			<label for="formGroupExampleInput">Project Name</label>
			<input type="text" class="form-control" id="inputProjectName" placeholder="Project name here..." required />
		</div>
	</div>
	<div class="form-row">
		<div class="form-group col-md-4">
			<label for="inputBudget">Project Budget</label>
			<input type="number" class="form-control" id="inputBudget" placeholder="$1,000,000" required />
		</div>
		<div class="form-group col-md-4">
			<label for="inputBudget">Client</label>
			<select id="inputClient" class="form-control" required>
				<option disabled selected>Choose...</option>
				{{#each client as |c|}}
					<option value="{{c.id}}">{{c.firstName}} {{c.lastName}}</option>
				{{/each}}
			</select>
		</div>
		<div class="form-group col-md-4">
			<label for="inputBudget">Manager</label>
			<select id="inputManager" class="form-control" required>
				<option disabled selected>Choose...</option>
				{{#each manager as |m|}}
					<option value="{{m.id}}">{{m.name}}</option>
				{{/each}}
			</select>
		</div>
	</div>
	<div class="form-row">
		<div class="form-group col-md-12">
			<label for="inputAddress">Address</label>
			<input type="text" class="form-control" id="inputAddress" placeholder="1234 Main St" required />
		</div>
		<div class="form-group col-md-6">
			<label for="inputCity">City</label>
			<input type="text" class="form-control" id="inputCity" placeholder="Sydney" required />
		</div>
		<div class="form-group col-md-4">
			<label for="inputState">State</label>
			<select id="inputState" class="form-control" required>
				<option disabled selected>Choose...</option>
				<option>NSW</option>
				<option>WA</option>
				<option>ACT</option>
				<option>QLD</option>
				<option>SA</option>
				<option>TAS</option>
			</select>
		</div>
		<div class="form-group col-md-2">
			<label for="inputZip">Zip</label>
			<input type="text" class="form-control" id="inputZip" placeholder="2000" required />
		</div>
	</div>
	<div class="form-row">
		<div class="form-group col-12">
			<label for="inputDescription">Project Details</label>
			<textarea type="text" class="form-control" id="inputDescription" placeholder="Project description here..." required></textarea>
		</div>
	</div>
	<button type="submit" class="btn" id="add">Add Project</button>
</form>

<script src="./../../js/projectAdd.js"></script>